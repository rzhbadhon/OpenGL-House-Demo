{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build main.exe",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/main.cpp",
                "src/glad.c",
                "-o",
                "build/main.exe",
                "-Iinclude",
                "-Llib",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}